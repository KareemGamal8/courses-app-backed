{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "rating": {
      "type": "integer",
      "required": true,
      "max": 5,
      "min": 1
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "salePrice": {
      "type": "integer"
    },
    "inStock": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "shortDescription": {
      "type": "blocks",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "brand": {
      "type": "string",
      "required": true
    }
  }
}
